<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <!-- Servlet Declaration for UserServlet -->
    <servlet>
        <servlet-name>UserCrudServlet</servlet-name>
        <servlet-class>org.youcode.DevSync.servlets.crud.UserCrudServlet</servlet-class>
    </servlet>

    <!-- Servlet Mapping for UserServlet -->
    <servlet-mapping>
        <servlet-name>UserCrudServlet</servlet-name>
        <url-pattern>/user-crud</url-pattern>
    </servlet-mapping>

    <!-- Servlet Declaration for LoginServlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>org.youcode.DevSync.servlets.LoginServlet</servlet-class>
    </servlet>

    <!-- Servlet Mapping for LoginServlet -->
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>org.youcode.DevSync.servlets.users.AdminServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>TagCrudServlet</servlet-name>
        <servlet-class>org.youcode.DevSync.servlets.crud.TagCrudServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TagCrudServlet</servlet-name>
        <url-pattern>/TagCrud</url-pattern>
    </servlet-mapping>

    <!-- Servlet Declaration for TaskCrudServlet -->
    <servlet>
        <servlet-name>TaskCrudServlet</servlet-name>
        <servlet-class>org.youcode.DevSync.servlets.crud.TaskCrudServlet</servlet-class>
    </servlet>

    <!-- Servlet Mapping for TaskCrudServlet -->
    <servlet-mapping>
        <servlet-name>TaskCrudServlet</servlet-name>
        <url-pattern>/crudtask</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ManagerServlet</servlet-name>
        <servlet-class>org.youcode.DevSync.servlets.users.ManagerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ManagerServlet</servlet-name>
        <url-pattern>/manager</url-pattern>
    </servlet-mapping>

    <!-- Servlet Declaration for LogoutServlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>org.youcode.DevSync.servlets.LogoutServlet</servlet-class>
    </servlet>

    <!-- Servlet Mapping for LogoutServlet -->
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>org.youcode.DevSync.servlets.users.UserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <!-- JSP Mapping Example (optional) -->
    <jsp-config>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
            <taglib-location>/WEB-INF/lib/jstl.jar</taglib-location>
        </taglib>
    </jsp-config>


    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Session Timeout (optional) -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>
